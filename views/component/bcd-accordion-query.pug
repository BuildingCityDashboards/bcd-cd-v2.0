//- accordion
mixin accordion(id)
  .accordion(id="accordion-"+id)
    block

mixin accordion({id='', title='title', content='Content will appear here when available', classes=''})
  .accordion(class=classes id=id)
    .accordion__heading
      h1
        != title
      svg(class="accordion__arrow" width="7" height="12" viewBox="0 0 7 12")
        path(fill-rule="nonzero" d="M5.569 5.994L0 .726.687 0l6.336 5.994-6.335 6.002L0 11.27z")
    .accordion__content
        p
            != content
    //- optional content add in main view
    block
        
