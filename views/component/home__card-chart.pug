mixin home__card-chart({id='',title='card title', subtitle='',icon='', info='Information will appear here when available',links=[]})
    div(class='home__card-chart')
        .card
            .card__header
                //- img(src= icon).card__icon
                h1.card__title=title
                h2.card__sub-title=subtitle
            .card__body
                div(id=chartid class="card__line-chart")
            .card__info
                .card__info-border 
                .card-info-text.p Information will appear here when available
                .card__info__buttons
                    each l in links
                        a(href=l.href class="card__link").button #{l.name}



                        
