mixin home__card-chart({id='', title='card title', subtitle='', info='Information will appear here when available',links=[], data={}, plotoptions={}})
    div(id=id class='home__card-chart')
        .card
            .card__header
                //- img(src= icon).card__icon
                h1.card__title=title
                h2.card__sub-title=subtitle
            .card__body
                div(id=plotoptions.chartid class="card__line-chart")
            .card__info
                .card__info-border 
                p.card__info-text=info
                .card__info__buttons
                    each l in links
                        a(href=l.href class="card__link").button #{l.name}
    script(type="module").
        import { main } from !{JSON.stringify(plotoptions.src)}
        (async function(o){
           main(o);
         })(!{JSON.stringify(plotoptions)})     
        