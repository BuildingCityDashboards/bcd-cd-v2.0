mixin home__card-indicator({id='', title='card title', subtitle='',icon='', info='Information will appear here when available',links=[], data={}, displayoptions = {}})
    div(id=id class='home__card-indicator')
        .card
            .card__header
                //- img(src= icon).card__icon
                h1.card__title=title
                h2.card__sub-title=subtitle
            .card__body
                div(id=displayoptions.chartid class="card__diplay")
                  #card-left.card__left
                  #card-center.card__center
                  #card-right.card__right
            .card__info
                .card__info-border 
                p.card__info-text=info
                .card__info__buttons
                    each b in buttons
                        a(href=b.href class="card__link").button #{b.name}
    script(type="module").
        import { main } from !{JSON.stringify(displayoptions.src)}
        (async function(o){
           main(o);
         })(!{JSON.stringify(displayoptions)})    

        
                        
                    
